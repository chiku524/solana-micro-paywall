{
  "name": "solana-micro-paywall",
  "version": "0.1.0",
  "private": true,
  "description": "Micro-paywall / pay-per-use SDK platform for Solana Pay.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently -n \"backend,web\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --prefix apps/backend",
    "dev:web": "npm run dev --prefix apps/web",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "engines": {
    "node": ">=18.18",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.4.0",
  "license": "UNLICENSED",
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2"
  }
}
