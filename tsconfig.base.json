{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@solana-micro-paywall/shared/*": [
        "packages/shared/src/*"
      ],
      "@solana-micro-paywall/config": [
        "packages/config/src/index"
      ]
    }
  },
  "include": [
    "apps",
    "packages"
  ]
}

