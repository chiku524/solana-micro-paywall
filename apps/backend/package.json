{
  "name": "@solana-micro-paywall/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "start": "node dist/main.js",
    "build": "nest build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:manual-setup": "echo 'Run apps/backend/prisma/migrations/manual-setup.sql in Supabase SQL Editor'",
    "db:migrate:indexes": "ts-node --project ../../scripts/tsconfig.json ../../scripts/run-migration.ts",
    "db:migrate:psql": "bash ../../scripts/run-migration-psql.sh",
    "verify:setup": "ts-node --project ../../scripts/tsconfig.json ../../scripts/verify-setup.ts",
    "check:indexes": "psql $DATABASE_URL -c \"SELECT indexname, tablename FROM pg_indexes WHERE tablename IN ('PaymentIntent', 'Payment', 'AccessToken', 'Content') AND indexname LIKE 'idx_%' ORDER BY tablename, indexname;\""
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^5.10.2",
    "@solana/pay": "^0.2.6",
    "@solana/web3.js": "^1.91.3",
    "@types/compression": "^1.8.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bullmq": "^4.15.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.1",
    "fastify-helmet": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.32.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "nestjs-pino": "^4.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^5.0.5",
    "@types/node": "^20.11.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
