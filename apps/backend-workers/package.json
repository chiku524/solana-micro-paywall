{
  "name": "@solana-micro-paywall/backend-workers",
  "version": "0.1.0",
  "private": true,
  "description": "Cloudflare Workers backend for Solana Micro-Paywall",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy",
    "db:migrate": "wrangler d1 execute micropaywall-db --file=../../migrations/d1-schema.sql",
    "db:query": "wrangler d1 execute micropaywall-db",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "hono": "^4.10.8",
    "@hono/node-server": "^1.12.2",
    "wrangler": "^4.53.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251209.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.9.3",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2"
  }
}

