# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/solana_micro_paywall

# Redis
REDIS_URL=redis://localhost:6379

# Solana RPC Configuration
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
SOLANA_WS_ENDPOINT=wss://api.devnet.solana.com
SOLANA_RPC_ENDPOINT_FALLBACK=https://api.devnet.solana.com

# JWT Configuration (for access tokens)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production
# For RS256 (optional, more secure):
# JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
# JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Platform Configuration
PLATFORM_WALLET_ADDRESS=YourPlatformWalletAddressHere
# PLATFORM_PRIVATE_KEY=YourPlatformPrivateKeyHere (use Secrets Manager in production!)

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SOLANA_RPC=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Security
WEBHOOK_SECRET=your-webhook-secret-minimum-32-characters-change-in-production
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Optional: Stripe Integration (for fallback payments)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring
# SENTRY_DSN=https://...
LOG_LEVEL=info

